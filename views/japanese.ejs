<!DOCTYPE html>
<html>

<head>
    <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js'></script>
    <title>Manabu</title>
    <!-- Import CSS -->
    <link href="https://fonts.googleapis.com/css?family=Lato" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" type="text/css" href="/stylesheets/materialize.min.css">
</head>

<body class="grey lighten-4">
    <%- include('partials/navbar') %>
        <div class="container" id="mainGame">
            <h2 class="center-align">Japanese</h2>
            <!-- Timer -->
            <b><p class = "center-align red-text ">Timer:<span id="timer"></span></p></b>
            <!--Points meters-->
            <div class="col s12 container">
                <div class="row">
                    <div class="col s6">
                        <div class="card">
                            <div class="card-content center-align">
                                <span class="card-title">Your Points</span>
                                <span id="yourPoints"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col s6">
                        <div class="card">
                            <div class="card-content center-align">
                                <span class="card-title">Opponent Points</span>
                                <span id="opponentPoints"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Question box -->
            <div class="col s12" id="questionBox">
                <div class="card" style="">
                    <br>
                    <h4 id="question" class="center-align container light"></h4>
                    <div class="row center-align">
                        <br>
                        <div class="col s6">
                            <a class="btn green lighten-1" id="option1"></a>
                        </div>
                        <div class="col s6">
                            <a class="btn green lighten-1" id="option2"></a>
                        </div>
                    </div>
                    <div class="row center-align">
                        <div class="col s6">
                            <a class="btn green lighten-1" id="option3"></a>
                        </div>
                        <div class="col s6">
                            <a class="btn green lighten-1" id="option4"></a>
                        </div>
                        <br><br><br>
                    </div>
                </div>
            </div>
        </div>
        <%- include('partials/footer') %>
            <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
            <script type="text/javascript" src="/javascripts/materialize.min.js"></script>
            <script src="https://www.gstatic.com/firebasejs/4.0.0/firebase.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.4/socket.io.js"></script>
            <script type="text/javascript" src="/javascripts/gamehelper.js" charset = "UTF-8"></script>
            <script>
            </script>
</body>

</html>